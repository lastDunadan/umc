---
const { href, text } = Astro.props;
---

<a href={href}>
  {text}
  <span> >> </span>
</a>

<style>
  a {
    display: block;
    box-sizing: border-box;
    position: relative;
    padding: 20px 25px;
    background-color: #1E1E1E;
    color: #711E1E;
    font-size: 36px;
    font-weight: bold;
    width: 100%;
    max-width: 500px;
    height: 150px;
    border: 5px solid #711E1E;
  }

  a:hover {
    background-color: #711E1E;
    color: #1E1E1E;
  }

  span {
    position: absolute;
    bottom: 20px;
    right: 30px;
    font-size: 48px;
  }
</style>