---
const { status, operation, description, hidden } = Astro.props;
---

<div class={hidden}>
    <p>[<span class=`status ${status}`>{status}</span>]&nbsp;<span class="operation">{operation}</span>&nbsp;{description}</p>
</div>

<style>
  div {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    color: #AA3030;
    font-weight: bold;
  }

  p {
    margin: 0;
  }

  .ok {
    color: #00FF00;
  }

  .status {
    display: inline-block;
    width: 60px;
    text-align: center;
    text-transform: uppercase;
  }

  .failed {
    color: #626262;
  }

  .hidden {
    display: none;
  }

  .operation {
    color: #711E1E;
    font-weight: bold;
  }
</style>